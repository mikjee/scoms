{
	"compilerOptions": {
		"module": "NodeNext", // Enables ES module support
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"lib": [
			"ES2020"
		],
		"rootDir": "./",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	}
}