{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@common/*": ["src/common/*"],
			"@services/*": ["src/services/*"]
		},
		"allowJs": true,
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"lib": [
			"es2017",
			"esnext"
		],
		"types": [
			"jest",
			"node"
		],
		"rootDir": "./",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}